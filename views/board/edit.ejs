<!DOCTYPE html>
<html>
  <head> </head>
  <body>
    <div class="container mb-3">
      <form action="/board/<%= post._id %>?_method=put" method="post">
        <div class="form-group">
          <label for="title">Title</label>
          <input
            type="text"
            id="title"
            name="title"
            value="<%= post.title %>"
            class="form-control <%= (error.title)?'is-invalid':'' %>"
          />
          <% if(error.title){ %>
          <span><%= error.title.message %></span>
          <% } %>
        </div>

        <div>
          <label for="body">Body</label>
          <textarea
            id="content"
            name="content"
            rows="5"
            class="form-control <%= (error.body)?'is-invalid':'' %>"
          >
<%= post.content %></textarea
          >
        </div>
        <div>
          <span>#</span>
          <div style="display: inline-block">
            <input
              type="text"
              name="hashtag"
              id="hashtag"
              placeholder="태그입력"
              class="form-control"
              value=<%= post.hashtag[0] %>
            />
          </div>
          <span>#</span>
          <div style="display: inline-block">
            <input
              type="text"
              name="hashtag"
              id="hashtag"
              placeholder="태그입력"
              class="form-control"
              value=<%= post.hashtag[1] %>
            />
          </div>
          <span>#</span>
          <div style="display: inline-block">
            <input
              type="text"
              name="hashtag"
              id="hashtag"
              placeholder="태그입력"
              class="form-control"
              value=<%= post.hashtag[2] %>
            />
          </div>

        <div style="margin-top: 5px">
          <a class="btn btn-primary" href="/board/<%= post._id %>">뒤로가기</a>
          <button type="submit" class="btn btn-primary" style="float: right">수정</button>
        </div>
      </form>
    </div>
  </body>
</html>
